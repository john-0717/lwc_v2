{
  "jobProjection": {
    "jobTitle": 1,
    "jobType": 1,
    "industry": 1,
    "jobDescription": 1,
    "jobLocation": 1,
    "salary": 1,
    "payRateFrom": 1,
    "payRateTo": 1,
    "hoursPerWeek": 1,
    "isBonusAllowed": 1,
    "bonusAmount": 1,
    "earningPerWeek": 1,
    "paymentFrequency": 1,
    "mandatoryQualificationName": 1,
    "mandatoryQualificationLevel": 1,
    "optionalQualificationName": 1,
    "optionalQualificationLevel": 1,
    "mandatoryExperience": 1,
    "optionalExperience": 1,
    "isQualificationExpRequired": 1,
    "qualificationDescription": 1,
    "isNzRegistration": 1,
    "nzRegistrationDetails": 1,
    "jobDuties": 1,
    "jobSkills": 1,
    "skillLevel": 1,
    "isDeleted": 1,
    "status": {
      "$cond": {
        "if": { "$eq": ["$status", "Published"] },
        "then": "Active",
        "else": {
          "$cond": {
            "if": { "$eq": ["$status", "Expired"] },
            "then": "Expire",
            "else": "$status"
          }
        }
      }
    },
    "createdAt": 1,
    "updatedAt": 1,
    "userId": 1,
    "jobId": 1,
    "startDate": 1,
    "endDate": 1,
    "location": 1,
    "country": 1,
    "otherInfo": 1,
    "ansco": 1,
    "aboutUs": 1,
    "region": 1,
    "createdBy": { "$ifNull": ["$createdBy", null] },
    "isApproved": 1,
    "isApprovedBy": 1,
    "isRequestSent": { "$ifNull": ["$isRequestSent", false] }
  }
}
